{
  "builders": [{
    "type": "virtualbox-iso",
    "boot_wait": "10s",
    "guest_os_type": "RedHat_64",
    "iso_checksum_type": "md5",
    "iso_checksum": "88c0437f0a14c6e2c94426df9d43cd67",
    "iso_url": "http://mirror.strencom.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20000s",
    "ssh_port": 22,
    "headless": "false",
    "type": "virtualbox-iso",
    "shutdown_command": "sudo -S shutdown -P now",
    "http_directory": "http",
    "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
    "virtualbox_version_file": ".vbox_version",
    "boot_command": [
      "<wait><esc><esc>",
      "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart<enter>"
    ]
  },
   {
    "type": "parallels-iso",
    "guest_os_type": "rhel",
    "iso_checksum_type": "md5",
    "iso_checksum": "88c0437f0a14c6e2c94426df9d43cd67",
    "iso_url": "http://mirror.strencom.net/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
    "parallels_tools_flavor": "lin",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20000s",
    "http_directory": "http",
    "ssh_port": 22,
    "shutdown_command": "sudo -S shutdown -P now",
    "prlctl": [
      ["set", "{{.Name}}", "--memsize", "1024"],
      ["set", "{{.Name}}", "--cpus", "2"]
    ],
    "boot_command": [
      "<wait><esc><esc>",
      "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart<enter>"
    ]
   }
],
 "push": {
      "name": "dekstroza/kube-overlay-xfs"
    },
"provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/install-zfs.sh",
	"scripts/install-vbox-tools.sh",
        "scripts/docker-cfg.sh",
        "scripts/update-kubernetes.sh",
        "scripts/update-flannel.sh",
        "scripts/compact.sh"
      ],
      "type": "shell"
    }
  ],
"post-processors": [
  [{
        "type": "vagrant",
        "keep_input_artifact": false
    },
    {
        "type": "atlas",
        "artifact": "dekstroza/kube-overlay-xfs",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "parallels",
          "created_at": "{{timestamp}}",
          "version": "1.4.8"
        }
     },
     {
        "type": "atlas",
        "artifact": "dekstroza/kube-overlay-xfs",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "created_at": "{{timestamp}}",
	  "version": "1.4.9"
        }
     }
 ]]
}
